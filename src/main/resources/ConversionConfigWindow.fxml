<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="750.0" spacing="0" styleClass="conversion-config-root-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConversionConfigWindowController">

    <children>
        <!-- MODERN HEADER -->
        <VBox fx:id="conversionConfigHeaderContainer" prefHeight="43.0" prefWidth="750.0" spacing="5" styleClass="conversion-config-header-container">
            <children>
                <Label alignment="CENTER" prefWidth="720.0" styleClass="conversion-config-main-title" text="Editor Configurazione Conversione" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" prefWidth="720.0" styleClass="conversion-config-subtitle" text="Configura i parametri per le conversioni dei file" textAlignment="CENTER">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>

        <!-- MAIN SEPARATOR -->
        <Separator styleClass="conversion-config-main-separator" />

        <!-- MAIN CONTENT AREA -->
        <VBox prefHeight="579.0" prefWidth="750.0" spacing="20.0" styleClass="conversion-config-content-area" VBox.vgrow="ALWAYS">
            <children>

                <!-- CONFIGURATION FIELDS SECTION -->
                <VBox spacing="15.0" styleClass="conversion-config-fields-container">
                    <children>
                        <Label styleClass="conversion-config-section-title" text="Configurazione Parametri">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <Separator styleClass="conversion-config-section-line" />

                        <!-- Password Field -->
                        <VBox spacing="6.0" styleClass="conversion-config-field-group">
                            <children>
                                <Label styleClass="conversion-config-field-label" text="Password (usata solo se necessario)">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="txtPassword" prefWidth="600.0" promptText="Inserisci la password per documenti protetti..." styleClass="conversion-config-text-field" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Union Field -->
                        <VBox spacing="6.0" styleClass="conversion-config-field-group">
                            <children>
                                <Label styleClass="conversion-config-field-label" text="Unione delle pagine dei documenti PDF in un'unica immagine">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="unionField" editable="false" prefWidth="100.0" styleClass="conversion-config-readonly-field" text="false" />
                                        <Button fx:id="toggleUnionBtn" onAction="#toggleUnion" prefHeight="32.0" prefWidth="150.0" styleClass="conversion-config-toggle-btn" text="Abilita">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Zipped Output Field -->
                        <VBox spacing="6.0" styleClass="conversion-config-field-group">
                            <children>
                                <Label styleClass="conversion-config-field-label" text="File convertito zippato">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="zippedOutputField" editable="false" prefWidth="100.0" styleClass="conversion-config-readonly-field" text="false" />
                                        <Button fx:id="toggleZippedOutputBtn" onAction="#zippedOutput" prefHeight="32.0" prefWidth="150.0" styleClass="conversion-config-toggle-btn" text="Abilita">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- ACTION BUTTONS FOOTER -->
                <HBox alignment="CENTER" prefHeight="76.0" prefWidth="750.0" spacing="20.0" styleClass="conversion-config-fields-container">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveConfiguration" prefHeight="40.0" prefWidth="120.0" styleClass="conversion-config-save-btn" text="Salva">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAndClose" prefHeight="40.0" prefWidth="120.0" styleClass="conversion-config-cancel-btn" text="Chiudi">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="0.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>

        <!-- FOOTER SEPARATOR -->
        <Separator styleClass="conversion-config-main-separator" />
    </children>
</VBox>