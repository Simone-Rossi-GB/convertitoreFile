<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="650.0" prefWidth="500.0" spacing="15.0" styleClass="register-container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="webService.client.gui.RegisterController">
    <children>

        <!-- HEADER -->
        <VBox alignment="CENTER" spacing="8.0" styleClass="register-header">
            <children>
                <Label fx:id="titleLabel" styleClass="register-title" text="Create Account">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="subtitleLabel" styleClass="register-subtitle" text="Join ByteBridge File Converter">
                    <font>
                        <Font name="System" size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- REGISTRATION FORM -->
        <VBox alignment="CENTER" spacing="12.0" styleClass="register-form">
            <children>

                <!-- Full Name Field -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="fullNameLabel" styleClass="field-label" text="Full Name:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <TextField fx:id="fullNameField" prefHeight="32.0" prefWidth="320.0" promptText="Enter your full name" styleClass="register-field">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <!-- Username Field -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="usernameLabel" styleClass="field-label" text="Username:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" prefHeight="32.0" prefWidth="320.0" promptText="Choose a username" styleClass="register-field">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <!-- Email Field -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="emailLabel" styleClass="field-label" text="Email:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailField" prefHeight="32.0" prefWidth="320.0" promptText="Enter your email address" styleClass="register-field">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="passwordLabel" styleClass="field-label" text="Password:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="passwordField" prefHeight="32.0" prefWidth="320.0" promptText="Create a strong password" styleClass="register-field">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </PasswordField>
                    </children>
                </VBox>

                <!-- Confirm Password Field -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="confirmPasswordLabel" styleClass="field-label" text="Confirm Password:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="confirmPasswordField" prefHeight="32.0" prefWidth="320.0" promptText="Re-enter your password" styleClass="register-field">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </PasswordField>
                    </children>
                </VBox>

                <!-- Role Selection -->
                <VBox spacing="4.0">
                    <children>
                        <Label fx:id="roleLabel" styleClass="field-label" text="Role:">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="roleComboBox" prefHeight="32.0" prefWidth="320.0" promptText="Select user role" styleClass="register-field">
                            <items>
                                <String fx:value="USER" />
                                <String fx:value="ADMIN" />
                            </items>
                        </ComboBox>
                    </children>
                </VBox>

                <!-- Error/Success Messages -->
                <VBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label fx:id="errorLabel" styleClass="error-message" text="" visible="false">
                            <font>
                                <Font name="System" size="10.0" />
                            </font>
                        </Label>
                        <Label fx:id="successLabel" styleClass="success-message" text="" visible="false">
                            <font>
                                <Font name="System" size="10.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Buttons -->
                <VBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="35.0" prefWidth="320.0" styleClass="register-btn" text="Create Account">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="backToLoginButton" onAction="#handleBackToLogin" prefHeight="30.0" prefWidth="320.0" styleClass="secondary-btn" text="Back to Login">
                            <font>
                                <Font name="System" size="11.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>

            </children>
            <padding>
                <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
            </padding>
        </VBox>

        <!-- FOOTER -->
        <VBox alignment="CENTER" spacing="8.0">
            <children>
                <Label fx:id="noteLabel" styleClass="note-text" text="Note: Admin approval required for new accounts">
                    <font>
                        <Font name="System Italic" size="9.0" />
                    </font>
                </Label>

                <!-- Theme and Language Controls -->
                <HBox alignment="CENTER" spacing="8.0">
                    <children>
                        <Button fx:id="themeToggle" onAction="#toggleTheme" prefHeight="26.0" prefWidth="35.0" styleClass="theme-btn" text="☾/☀">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Button>
                        <Button fx:id="langButton" onAction="#showLanguageMenu" prefHeight="26.0" prefWidth="35.0" styleClass="lang-btn" />
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>