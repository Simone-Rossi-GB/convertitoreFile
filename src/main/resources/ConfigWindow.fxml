<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConfigWindowController">
    <children>
        <!-- Header -->
        <Label alignment="CENTER" prefWidth="770.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 15;" text="Editor Configurazione" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <!-- configuration Fields Section -->
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 8; -fx-padding: 15;">
            <children>
                <Label text="Configurazione Cartelle" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Cartella Input -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Cartella Monitorata (Input):" textFill="#34495e">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="monitoredDirField" prefWidth="500.0" promptText="Seleziona la cartella da monitorare..." />
                                <Button fx:id="browseMonitoredBtn" onAction="#browseMonitoredDirectory" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Sfoglia..." />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Cartella Success -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Cartella File Convertiti (Success):" textFill="#34495e">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="successDirField" prefWidth="500.0" promptText="Seleziona cartella per file convertiti..." />
                                <Button fx:id="browseSuccessBtn" onAction="#browseSuccessDirectory" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" text="Sfoglia..." />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Cartella Error -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Cartella Errori:" textFill="#34495e">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="errorDirField" prefWidth="500.0" promptText="Seleziona cartella per file con errori..." />
                                <Button fx:id="browseErrorBtn" onAction="#browseErrorDirectory" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Sfoglia..." />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Monitor at Start -->
                <VBox spacing="5.0">
                    <children>
                        <Label text="Avvio Automatico Monitoraggio:" textFill="#34495e">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <TextField fx:id="monitorAtStartField" editable="false" prefWidth="100.0" style="-fx-background-color: #bdc3c7;" text="false" />
                                <Button fx:id="toggleMonitorBtn" onAction="#toggleMonitorAtStart" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5;" text="Cambia Valore" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>

        <Separator />

        <!-- Conversions JSON Section -->
        <VBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Configurazione Conversioni (JSON)" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <Label text="Visualizzazione della sezione 'conversions' del file JSON (sola lettura)." textFill="#7f8c8d" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <!-- Text Editor Area -->
                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" style="-fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" VBox.vgrow="ALWAYS">
                    <content>
                        <TextArea fx:id="conversionsTextArea" editable="false" style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 13px; -fx-background-color: #f8f9fa; -fx-text-fill: #2c3e50; -fx-border-color: transparent;" wrapText="false">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor></TextArea>
                    </content>
                </ScrollPane>
            <Label fx:id="monitoringStatusLabel" textFill="#7f8c8d" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            </children>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveConfiguration" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Salva">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAndClose" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 20; -fx-font-weight: bold; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.5, 0, 2);" text="Chiudi">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>
