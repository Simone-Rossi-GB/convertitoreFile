<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane xmlns="http://javafx.com/javafx/8.0.452"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.MainViewController"
      styleClass="root-dark"
      prefWidth="900.0" prefHeight="700.0">
    <children>
        <VBox prefWidth="900.0" prefHeight="700.0" spacing="0" styleClass="main-container">

            <!-- HEADER BAR -->
            <HBox prefWidth="900.0" prefHeight="60.0" alignment="CENTER_LEFT" spacing="10" styleClass="header-bar">
                <children>
                    <Label text="File Converter Manager" styleClass="app-title">
                        <font><Font name="System Bold" size="22.0"/></font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ToggleButton fx:id="themeToggle" text="ðŸŒ™/â˜€ Toggle" styleClass="toggle-btn"/>
                </children>
                <padding>
                    <Insets top="15.0" right="25.0" bottom="15.0" left="25.0"/>
                </padding>
            </HBox>

            <!-- SEPARATOR LINE -->
            <Separator prefWidth="900.0" styleClass="main-separator"/>

            <!-- MAIN CONTENT AREA -->
            <HBox prefWidth="900.0" prefHeight="480.0" spacing="0" styleClass="content-area">
                <children>

                    <!-- LEFT PANEL -->
                    <VBox prefWidth="250.0" prefHeight="480.0" spacing="0" styleClass="left-panel">
                        <children>

                            <!-- Directory Section -->
                            <VBox prefWidth="250.0" prefHeight="160.0" spacing="10.0" styleClass="directory-section">
                                <children>
                                    <Label text="Directory" styleClass="section-title">
                                        <font><Font name="System Bold" size="16.0"/></font>
                                    </Label>
                                    <Separator prefWidth="230.0" styleClass="section-line"/>

                                    <!-- All Directory Buttons Vertically -->
                                    <VBox alignment="CENTER" spacing="8.0" VBox.vgrow="ALWAYS">
                                        <children>
                                            <Button fx:id="caricaFileBtn" text="[Carica File]" styleClass="accent-btn"
                                                    prefWidth="140.0" prefHeight="32.0">
                                                <font><Font name="System Bold" size="11.0"/></font>
                                            </Button>
                                            <Button fx:id="fileConvertitiBtn" text="[File Conv.]" styleClass="accent-btn"
                                                    prefWidth="140.0" prefHeight="32.0">
                                                <font><Font name="System Bold" size="11.0"/></font>
                                            </Button>
                                            <Button fx:id="conversioniFalliteBtn" text="[Conv. Fall.]" styleClass="accent-btn"
                                                    prefWidth="140.0" prefHeight="32.0">
                                                <font><Font name="System Bold" size="11.0"/></font>
                                            </Button>
                                        </children>
                                    </VBox>
                                </children>
                                <padding>
                                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                                </padding>
                            </VBox>

                            <!-- Opzioni Conversione Section -->
                            <VBox prefWidth="300.0" prefHeight="100.0" spacing="10.0" styleClass="options-section">
                                <children>
                                    <Label text="Opzioni Conv." styleClass="section-title">
                                        <font><Font name="System Bold" size="16.0"/></font>
                                    </Label>
                                    <Separator prefWidth="280.0" styleClass="section-line"/>

                                    <HBox alignment="CENTER" spacing="10.0">
                                        <children>
                                            <Button fx:id="configBtn" text="[Config]" styleClass="standard-btn"
                                                    prefWidth="80.0" prefHeight="30.0">
                                                <font><Font name="System Bold" size="11.0"/></font>
                                            </Button>
                                            <Button fx:id="conversionConfigBtn" text="[Conv Cfg]" styleClass="standard-btn"
                                                    prefWidth="80.0" prefHeight="30.0">
                                                <font><Font name="System Bold" size="11.0"/></font>
                                            </Button>
                                        </children>
                                    </HBox>
                                </children>
                                <padding>
                                    <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                                </padding>
                            </VBox>

                            <!-- Monitoring Button Section -->
                            <VBox prefWidth="300.0" prefHeight="200.0" alignment="CENTER" spacing="0" styleClass="monitoring-section">
                                <children>
                                    <Button fx:id="MonitoringBtn" text="[ Monitoraggio ]" styleClass="standard-btn"
                                            prefWidth="150.0" prefHeight="40.0">
                                        <font><Font name="System Bold" size="13.0"/></font>
                                    </Button>
                                </children>
                            </VBox>

                        </children>
                    </VBox>

                    <!-- VERTICAL SEPARATOR -->
                    <Separator orientation="VERTICAL" prefHeight="480.0" styleClass="vertical-separator"/>

                    <!-- RIGHT PANEL - Log Application -->
                    <VBox prefWidth="650.0" prefHeight="480.0" spacing="8.0" styleClass="log-panel">
                        <children>
                            <Label text="Log Applicazione" styleClass="log-title">
                                <font><Font name="System Bold" size="18.0"/></font>
                            </Label>
                            <Separator prefWidth="630.0" styleClass="section-line"/>

                            <!-- Log Area -->
                            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="log-scroll" VBox.vgrow="ALWAYS">
                                <content>
                                    <TextArea fx:id="applicationLogArea"
                                              text="â€¢ [hh:mm:ss] Avvio monitoraggioâ€¦&#10;â€¢ [hh:mm:ss] File convertitiâ€¦&#10;â€¢ â€¦"
                                              wrapText="true" styleClass="log-area" editable="false">
                                        <font><Font name="Consolas" size="12.0"/></font>
                                    </TextArea>
                                </content>
                            </ScrollPane>
                        </children>
                        <padding>
                            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                        </padding>
                    </VBox>

                </children>
            </HBox>

            <!-- SEPARATOR LINE -->
            <Separator prefWidth="900.0" styleClass="main-separator"/>

            <!-- STATISTICS BAR -->
            <HBox prefWidth="900.0" prefHeight="50.0" alignment="CENTER_LEFT" spacing="15" styleClass="stats-bar">
                <children>
                    <Label text="File Rilevati: " styleClass="stat-label">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>
                    <Label fx:id="detectedFilesCounter" text="XX" styleClass="stat-value">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>

                    <Label text="   Riuscite: " styleClass="stat-label">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>
                    <Label fx:id="successfulConversionsCounter" text="XX" styleClass="stat-value">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>

                    <Label text="   Fallite: " styleClass="stat-label">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>
                    <Label fx:id="failedConversionsCounter" text="XX" styleClass="stat-value">
                        <font><Font name="System Bold" size="12.0"/></font>
                    </Label>

                    <Region HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets top="10.0" right="25.0" bottom="10.0" left="25.0"/>
                </padding>
            </HBox>

            <!-- SEPARATOR LINE -->
            <Separator prefWidth="900.0" styleClass="main-separator"/>

            <!-- FOOTER BAR -->
            <HBox prefWidth="900.0" prefHeight="50.0" alignment="CENTER_LEFT" spacing="10" styleClass="footer-bar">
                <children>
                    <Button fx:id="exitBtn" text="[Esci]" styleClass="standard-btn">
                        <font><Font name="System Bold" size="11.0"/></font>
                    </Button>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label fx:id="monitoringStatusLabel" text="Sviluppato da: Rossi Simone, Pletti Gianluca, Tagliani Daniel, Cicalese Anton, Ferrari Paolo" styleClass="developer-info">
                        <font><Font name="System Italic" size="10.0"/></font>
                    </Label>
                </children>
                <padding>
                    <Insets top="12.0" right="25.0" bottom="12.0" left="25.0"/>
                </padding>
            </HBox>

        </VBox>
    </children>
</Pane>