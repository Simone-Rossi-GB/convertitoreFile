<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="780.0" prefWidth="598.0" spacing="0" styleClass="config-root-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="webService.client.gui.ConfigWindowController">

    <children>
        <!-- MODERN HEADER -->
        <VBox fx:id="configHeaderContainer" prefHeight="43.0" prefWidth="750.0" spacing="5" styleClass="config-header-container">
            <children>
                <Label fx:id="configTitle" alignment="CENTER" prefWidth="720.0" styleClass="config-main-title" text="Editor Configurazione" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="configTitleDesc" alignment="CENTER" prefWidth="720.0" styleClass="config-subtitle" text="Configura le impostazioni del File Converter Manager" textAlignment="CENTER">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>

        <!-- MAIN SEPARATOR -->
        <Separator styleClass="config-main-separator" />

        <!-- MAIN CONTENT AREA -->
        <VBox prefHeight="579.0" prefWidth="750.0" spacing="20.0" styleClass="config-content-area" VBox.vgrow="ALWAYS">
            <children>

                <!-- CONFIGURATION FIELDS SECTION -->
                <VBox spacing="15.0" styleClass="config-fields-container">
                    <children>
                        <Label fx:id="directoryLabel" styleClass="config-section-title" text="Configurazione Cartelle">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <Separator styleClass="config-section-line" />

                        <!-- Input Folder -->
                        <VBox prefHeight="57.0" prefWidth="576.0" spacing="6.0" styleClass="config-field-group">
                            <children>
                                <Label fx:id="monitoredDirectoryLabel" styleClass="config-field-label" text="Cartella Monitorata (Input)">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="monitoredDirField" prefWidth="450.0" promptText="Seleziona la cartella da monitorare..." styleClass="config-text-field" />
                                        <Button fx:id="browseMonitoredBtn" onAction="#browseMonitoredDirectory" prefHeight="32.0" prefWidth="100.0" styleClass="config-browse-btn" text="Sfoglia">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Success Folder -->
                        <VBox spacing="6.0" styleClass="config-field-group">
                            <children>
                                <Label fx:id="successfulDirectoryLabel" styleClass="config-field-label" text="Cartella File Convertiti (Success)">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="successDirField" prefWidth="450.0" promptText="Seleziona cartella per file convertiti..." styleClass="config-text-field" />
                                        <Button fx:id="browseSuccessBtn" onAction="#browseSuccessDirectory" prefHeight="32.0" prefWidth="100.0" styleClass="config-success-btn" text="Sfoglia">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Error Folder -->
                        <VBox spacing="6.0" styleClass="config-field-group">
                            <children>
                                <Label fx:id="errorDirectoryLabel" styleClass="config-field-label" text="Cartella Errori">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <TextField fx:id="errorDirField" prefWidth="450.0" promptText="Seleziona cartella per file con errori..." styleClass="config-text-field" />
                                        <Button fx:id="browseErrorBtn" onAction="#browseErrorDirectory" prefHeight="32.0" prefWidth="100.0" styleClass="config-error-btn" text="Sfoglia">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Monitor at Start -->
                        <VBox spacing="6.0" styleClass="config-field-group">
                            <children>
                                <Label fx:id="startMonitoringLabel" styleClass="config-field-label" text="Avvio Automatico Monitoraggio">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="710.0" spacing="10.0">
                                    <children>
                                        <Button fx:id="toggleMonitorBtn" onAction="#toggleMonitorAtStart" prefHeight="32.0" prefWidth="150.0" styleClass="config-toggle-btn" text="Cambia Valore">
                                            <font>
                                                <Font name="System Bold" size="11.0" />
                                            </font>
                                        </Button>
                                        <Region HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
      
              <!-- ACTION BUTTONS FOOTER -->
              <HBox alignment="CENTER" prefHeight="76.0" prefWidth="750.0" spacing="20.0" styleClass="config-fields-container">
                  <children>
                  <HBox prefHeight="36.0" prefWidth="189.0">
                     <children>
                        <Button fx:id="tutorialConfigPage" mnemonicParsing="false" prefHeight="25.0" prefWidth="35.0" styleClass="theme-toggle-btn" text=" ? ">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </HBox>
                  <HBox prefHeight="46.0" prefWidth="226.0">
                     <children>
                            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveConfiguration" prefHeight="40.0" prefWidth="120.0" styleClass="config-save-btn" text="Salva">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                            </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="46.0" prefWidth="348.0">
                     <children>
                            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAndClose" prefHeight="40.0" prefWidth="120.0" styleClass="config-cancel-btn" text="Chiudi">
                                <font>
                                    <Font name="System Bold" size="13.0" />
                                </font>
                            </Button>
                     </children>
                  </HBox>
                  </children>
                  <padding>
                      <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                  </padding>
              </HBox>
            </children>
            <padding>
                <Insets bottom="0.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</VBox>
