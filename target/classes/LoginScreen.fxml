<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="550.0" prefWidth="450.0" styleClass="root-dark" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="webService.client.gui.LoginController">
    <children>

        <!-- HEADER BAR -->
        <HBox fx:id="header" alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="450.0" spacing="10" styleClass="header-bar">
            <children>
                <Label styleClass="app-title" text="ByteBridge">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="themeToggle" onAction="#toggleTheme" prefHeight="30.0" prefWidth="50.0" styleClass="theme-toggle-btn" text="☾/☀">
                    <font><Font name="DejaVu Sans" size="12.0" /></font>
                </ToggleButton>
                <Button fx:id="langButton" onAction="#showLanguageMenu" prefHeight="30.0" prefWidth="30.0" styleClass="theme-toggle-btn" />
            </children>
            <padding>
                <Insets bottom="15.0" left="25.0" right="15.0" top="15.0" />
            </padding>
        </HBox>

        <!-- SEPARATOR LINE -->
        <Separator prefWidth="450.0" styleClass="main-separator" />

        <!-- MAIN LOGIN CONTENT -->
        <VBox alignment="CENTER" spacing="20.0" styleClass="main-container" VBox.vgrow="ALWAYS">
            <children>

                <!-- TITLE SECTION -->
                <VBox alignment="CENTER" spacing="8.0" styleClass="login-header">
                    <children>
                        <Label fx:id="titleLabel" styleClass="section-title" text="Access Login">
                            <font><Font name="System Bold" size="24.0" /></font>
                        </Label>
                        <Label fx:id="subtitleLabel" styleClass="developer-info" text="Enter your credentials to continue">
                            <font><Font name="System Italic" size="12.0" /></font>
                        </Label>
                    </children>
                </VBox>

                <!-- LOGIN FORM -->
                <VBox alignment="CENTER" spacing="15.0" styleClass="login-form">
                    <children>

                        <!-- Username Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="usernameLabel" styleClass="stat-label" text="Username:">
                                    <font><Font name="System Bold" size="12.0" /></font>
                                </Label>
                                <TextField fx:id="usernameField" prefHeight="35.0" prefWidth="280.0" promptText="Enter your username" styleClass="standard-field">
                                    <font><Font size="12.0" /></font>
                                </TextField>
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="5.0">
                            <children>
                                <Label fx:id="passwordLabel" styleClass="stat-label" text="Password:">
                                    <font><Font name="System Bold" size="12.0" /></font>
                                </Label>
                                <PasswordField fx:id="passwordField" prefHeight="35.0" prefWidth="280.0" promptText="Enter your password" styleClass="standard-field">
                                    <font><Font size="12.0" /></font>
                                </PasswordField>
                            </children>
                        </VBox>

                        <!-- Error Message -->
                        <Label fx:id="errorLabel" styleClass="error-message" text="" visible="false">
                            <font><Font name="System" size="11.0" /></font>
                        </Label>

                        <!-- Login Button -->
                        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="40.0" prefWidth="280.0" styleClass="accent-btn" text="Login">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Button>

                        <!-- Register Button -->
                        <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="35.0" prefWidth="280.0" styleClass="standard-btn" text="Create New Account">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>

                    </children>
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </padding>
                </VBox>

            </children>
        </VBox>

        <!-- SEPARATOR LINE -->
        <Separator prefWidth="450.0" styleClass="main-separator" />

        <!-- FOOTER -->
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="450.0" styleClass="footer-bar">
            <children>
                <Label fx:id="versionLabel" styleClass="developer-info" text="File Converter v1.0 - Login System">
                    <font><Font name="System Italic" size="10.0" /></font>
                </Label>
            </children>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </HBox>

    </children>
</VBox>